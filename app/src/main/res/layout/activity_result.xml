<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    android:gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:padding="40dp"
        android:background="@drawable/background_rounding"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            android:paddingTop="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약완료!!"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/background_rounding"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/result_destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="10dp"
            android:gravity="left"
            android:textColor="#000000"
            android:paddingTop="30dp">
        </TextView>

        <TextView
            android:id="@+id/result_d_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="left">
        </TextView>

        <TextView
                    android:id="@+id/result_a_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="example"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:gravity="left">
                </TextView>

        <TextView
            android:id="@+id/result_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="left">
        </TextView>

        <!--        <TextView-->
        <!--            android:id="@+id/result_d_time"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="example"-->
        <!--            android:textSize="50dp"-->
        <!--            android:gravity="center">-->
        <!--        </TextView>-->

        <TextView
            android:id="@+id/result_meal_nm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="10dp"
            android:paddingBottom="30dp"
            android:textColor="#000000"
            android:gravity="left">
        </TextView>

        <TextView
            android:id="@+id/result_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example"
            android:textSize="10dp"
            android:paddingBottom="30dp"
            android:textColor="#000000"
            android:gravity="left">
        </TextView>

        <TextView
            android:id="@+id/btn_home"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/background_btn"
            android:text="처음으로 돌아가기"
            android:textSize="10dp"
            android:textColor="#000000"
            android:gravity="center" />

    </LinearLayout>



</LinearLayout>